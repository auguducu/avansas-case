@model Case.Entities.Concrete.Users
@using Case.Entities.Enum
@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Kullanıcı Ekle
            </h3>
        </div>
    </div>

    <!--begin::Form-->
    <form asp-controller="Home" asp-action="NewUser" method="post" class="kt-form kt-form--label-right" id="kt_form_2">
        <div class="kt-portlet__body">
            <div class="kt-section">
                <div class="kt-section__content">
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Ad:</label>
                            <input asp-for="FirstName" type="text" name="FirstName" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Soyad:</label>
                            <input asp-for="LastName" type="text" name="LastName" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">E-Posta:</label>
                            <input asp-for="Email" type="text" name="Email" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Telefon Numarası:</label>
                            <input asp-for="PhoneNumber" type="text" name="PhoneNumber" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Doğum Tarihi:</label>
                            <input asp-for="BirthDate" type="date" name="BirthDate" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Şifre:</label>
                            <input asp-for="Password" type="password" name="Password" class="form-control" placeholder="" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <label class="form-control-label">Rol:</label>
                            <select asp-for="Role" name="Role" class="form-control kt-selectpicker">
                                <option value="@Roles.Admin">@Roles.Admin</option>
                                <option value="@Roles.User">@Roles.User</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-brand">Kaydet</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">İptal Et</a>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!--end::Form-->
</div>